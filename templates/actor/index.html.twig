{% extends 'base.html.twig' %}

{% block title %}All actors
{% endblock %}

{% block body %}
	<h1>Tous les acteurs :
	</h1>
	{% for actor in actors %}
		<div>
			<h2>
				{{ loop.index }}
				/
				{{ actor.firstname }}
				{{ actor.lastname }}
				<a href="{{ path("actor_show", { 'id': actor.id }) }}">Voir la fiche</a>
			</h2>

		</div>
	{% else %}
		Aucun acteur trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
