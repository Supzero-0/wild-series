{% extends 'base.html.twig' %}

{% block title %}Liste des épisodes
{% endblock %}

{% block body %}
	<h1>Liste des épisodes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Numéro n°</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('episode_show', {'id': episode.id}) }}">Voir</a>
						<a href="{{ path('episode_edit', {'id': episode.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('episode_new') }}">Crée un nouvel épisode</a>
{% endblock %}
