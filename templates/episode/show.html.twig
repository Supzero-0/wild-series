{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	<h1>Episode</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ episode.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ episode.title }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ episode.number }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ episode.synopsis }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('episode_index') }}">Retour à la liste</a>

	<a href="{{ path('episode_edit', {'id': episode.id}) }}">Editer</a>

	{{ include('episode/_delete_form.html.twig') }}

	{% if is_granted('ROLE_USER') %}
		{{ include('comment/_form.html.twig') }}
	{% endif %}

	{% for comments in episode.comments %}
		<div>
			<h3>{{ comments.author.email }}</h3>
			<p>{{ comments.rate }}</p>
			<p>{{ comments.comment }}</p>
		</div>
	{% else %}
		Pas de commentaires trouvés
	{% endfor %}

{% endblock %}
