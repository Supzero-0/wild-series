{% extends 'base.html.twig' %}

{% block title %}Liste des saisons
{% endblock %}

{% block body %}
	<h1>Liste des saisons</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Saison n°</th>
				<th>Année</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for season in seasons %}
				<tr>
					<td>{{ season.id }}</td>
					<td>{{ season.number }}</td>
					<td>{{ season.year }}</td>
					<td>{{ season.description }}</td>
					<td>
						<a href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('season_new') }}">Créer une nouvelle saison</a>
{% endblock %}
